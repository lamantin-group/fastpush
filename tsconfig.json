{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    // "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "test"]
}